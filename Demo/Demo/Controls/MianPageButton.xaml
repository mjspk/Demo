<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    x:Class="Demo.Controls.MianPageButton"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Instance"
    Padding="0"
    CornerRadius="20"
    IsClippedToBounds="True">
    <AbsoluteLayout>
        <Image
            AbsoluteLayout.LayoutBounds="0,1,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Aspect="AspectFill"
            Source="{Binding Image, Source={x:Reference Instance}}" />
        <StackLayout
            AbsoluteLayout.LayoutBounds="0,1,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Background="{StaticResource PartialWhite}" />
        <Label
            Margin="10"
            AbsoluteLayout.LayoutBounds="0.5,1,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="15"
            HorizontalTextAlignment="Center"
            Text="{Binding Text, Source={x:Reference Instance}}"
            TextColor="White" />

    </AbsoluteLayout>
</Frame>